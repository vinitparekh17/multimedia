<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Oleo+Script+Swash+Caps:wght@700&display=swap" rel="stylesheet">

  <style>
    #white {
      color: #fff;
    }

    .logo {
      height: 32px;
      width: 32px;
      border-radius: 50%;
    }
  </style>
  <!-- CSS only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
  <link rel="stylesheet" href="/stylesheets/index.css" />
  <link rel="stylesheet" href="/stylesheets/music.css" />
  <!-- font awesome icons -->
  <script src="https://kit.fontawesome.com/2c582398a5.js" crossorigin="anonymous"></script>
  <title>MultiMedia</title>
</head>

<body>
  <%- include('_navbar') %>
  <div class="container">
    <div class="row" id="mt">
      <% songdata.map( s => { %>
      <div class="cardmargin col-lg-3 col-sm-6">
        <div class="card">
          <img src="<%= s.coverPath %>"
            class="card-img-top" id="0" alt="..." />
          <span class="sbtn" id='<%= s.id%>'><i class="fa-solid i fa-circle-play"></i></span>
        </div>
      </div>
      <% }) %>
    </div>
    <div class="bottom">
      <div class="fixed-bottom">
        <img src="https://media.discordapp.net/attachments/960040901261004830/960041574258065448/r0.jpg" id="banner"
          alt="" />
        <div class="text-content">
          <p id="song-name">Arijit Singh -khairiyat</p>
          <input type="range" id="proccessBar" value="0" min="0" max="100"></input>
          <div class="iconss">
            <i class="fa-solid fa-backward-step" id="previous"></i>
            <i class="fa-solid fa-play" id="play"></i>
            <i class="fa-solid fa-forward-step" id="next"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- JavaScript Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>

  <!-- Own JavaScript  -->
  <script src="/javascript/musicPlayer.js"></script>
</body>

</html>